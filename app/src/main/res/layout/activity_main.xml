<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <app.canvas_exam.DrawCanvas
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnTr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <TableRow
        android:id="@+id/btnTr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/clearCanvas"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.15"
            android:src="@drawable/clear" />

        <ImageView
            android:id="@+id/undo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.15"
            android:src="@drawable/undo"/>

        <ImageView
            android:id="@+id/changeColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.15"
            android:src="@drawable/change_color" />

        <ImageView
            android:id="@+id/changeBold"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="0.15"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/changeMedium"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="0.15"
            android:src="@drawable/circle_check" />

        <ImageView
            android:id="@+id/changeLight"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_weight="0.15"
            android:src="@drawable/circle" />


    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>
